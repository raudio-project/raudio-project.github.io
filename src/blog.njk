---
title: 'Raudio Blog'
layout: base.njk
page_name: 'blog'
---

{% for blog in collections.blogs | reverse %}
    <a href="/blog/{{ blog.fileSlug }}">
        <article class="blog-entry">
            <h1>{{ blog.data.title }}</h1>
            <h2>{{ blog.data.description }}</h2>
            <div class="article-info">
                <p class="author-text">{{ blog.data.author }}</p>
                <p> â€¢ </p>
                <p>{{ blog.date | blogDate }}</p>
            </div>
        </article>
    </a>
{# If there are no blogs to display #}
{% else %}
    <h2>No blog posts yet! Check in soon!</h2>
{% endfor %}
